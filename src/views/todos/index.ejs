<div class="todos-wrapper">
    <h4 class="mb-3"> todo list</h4>
    <div class="todos">
        <ul class="list-group">
            <% todos.forEach(function(todo){ %>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-5" style="font-weight: semibold; <%= todo.completed_at ? 'text-decoration: line-through;' : '' %>">
                            <%= todo.todo %>
                        </div>
                        <div class="col-md-3" style="font-weight: semibold; <%= todo.completed_at ? 'text-decoration: line-through;' : '' %>">
                            <%= todo.username %>
                        </div>
                        <div class="col-md-2" style="font-weight: semibold; <%= todo.completed_at ? 'text-decoration: line-through;' : '' %>">
                            <%= todo.completed_at %> 
                        </div>
                        <div class="col-md-2 text-end">
                            <a class="<%= todo.completed_at ? 'text-primary-emphasis' : 'text-success' %>" href="/<%= todo.id %>/completed">
                                <% if (todo.completed_at) {%>
                                    <i class="bi bi-clipboard-check-fill"></i>
                                    <% } else { %>
                                        <i class="bi bi-clipboard-check"></i>  
                                        <% }  %>                             
                            </a>
                            <% if (! todo.completed_at) {%>
                                <a class="text-info-emphasis" href="/<%= todo.id %>/edit"><i class="bi bi-pencil-square"></i></a>
                                <a class="text-info-emphasis" href="/<%= todo.id %>/delete"><i class="bi bi-x-circle-fill"></i></a>
                                <% } %>
                        </div>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>
    <div class="mt-3">
        <a href="/create" class="btn btn_small btn-primary"> add to todo</a>
    </div>
</div>
<style>
    .todos {
        height: 500px;
        overflow: auto;
    }
</style>